{% extends "base.html.j2" %}

{% block title %}FoxConnect | Search{% endblock %}

{% block head %}
<link href="{{ url_for('search.static', filename='search.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="row" hx-include="this">
  <div id="configuration" class="offcanvas offcanvas-end" tabindex="-1" aria-labelledby="configuration-label">
    {% include "search_configuration.html.j2" %}
  </div>
  <div id="table-container" class="col table-responsive">
    {% include "search_table.html.j2" %}
  </div>
</div>
{% endblock %}

{% block tail %}
<script src="{{ url_for('htmx.static', filename='htmx.org/dist/htmx.min.js') }}"></script>
<script src="{{ url_for('search.static', filename='search.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
{% endblock %}